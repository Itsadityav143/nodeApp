{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple example NodeJS API project to demonstrate Swagger Documentation",
        "version": "1.0.0",
        "title": "Haydii API",
        "contact": {
            "email": "abc@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    
    "schemes": [
        "http",
        "https"
    ],
    "host1": "localhost:3000",
    "host": "15.184.202.217:3000",
    "basePath": "/",
    "paths": {
        "/auth/user/signup": {
            "post": {
                "tags": [
                    "User Auth Api's"
                ],
                "summary": "User Sign Up",
                "description": "Application user signs up using this API",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "first_name",
                        "in": "formData",
                        "description": "first name of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "last_name",
                        "in": "formData",
                        "description": "last name of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "profile_image",
                        "in": "formData",
                        "description": "profile image of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "unique email of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "country_code",
                        "in": "formData",
                        "description": "country code Eg: +91",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "mobile_number",
                        "in": "formData",
                        "description": "unique mobile number of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "password user wants to set",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "device_type",
                        "in": "formData",
                        "description": "device_type",
                        "type": "string"
                    },
                    {
                        "name": "device_token",
                        "in": "formData",
                        "description": "device_token",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/auth/user/login": {
            "post": {
                "tags": [
                    "User Auth Api's"
                ],
                "summary": "User Login",
                "description": "Existing application users can login using this API",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "unique email of the user",
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "password user wants to set",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "device_type",
                        "in": "formData",
                        "description": "device_type",
                        "type": "string"
                    },
                    {
                        "name": "device_token",
                        "in": "formData",
                        "description": "device_token",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        
        }
    }
}
